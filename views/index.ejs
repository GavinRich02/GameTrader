<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GameTrader</title>
    <link rel="stylesheet" href="/index.css" type="text/css">
    <script src="/main.js" defer></script>
</head>
<body>
    <div id="header">
        <h1 id="head" style="display: inline-block">GameTrader</h1>
        <form action="/items/new/<%=user.id%>" method="GET" style="display: inline-block;" id="add"><h1 onclick="document.getElementById('add').submit()">+</h1></form>
        <h1 id="sign-out" onclick="window.location.href='/'" style="display: inline-block; flaot: right;">Sign Out</h1>
    </div>
    <% items.forEach(item=> { %>
        <% if(item.name!=" ") { %>
            <form action="/items/<%=item.id%>?_method=PATCH" method="POST" id="patch-<%=item.id%>">
                <div class="item" onclick="document.getElementById('patch-<%=item.id%>').submit()">
                    <div class="item-header">
                        <h1 style="display: inline-block;"><%= item.name %></h1>
                        <h1 style="display: inline-block; float: right;">Views: <%= item.views %></h1>
                    </div>
                    <h1>$<%= item.cost%></h1>
                </div>
            </form>
        <% } %>
    <% }) %>
</body>
</html>